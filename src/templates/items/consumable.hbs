<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-header.hbs"}}

    {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SFRPG.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SFRPG.Details" }}</a>
        <a class="item" data-tab="modifiers">{{ localize "SFRPG.Modifiers" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">

        {{!-- Description Tab --}}
        {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-group="primary" data-tab="details">

            {{!-- Details Tab Navigation --}}
            <nav class="sheet-subnavigation subtabs" data-group="subdetails">
                <a class="item active" data-tab="properties">{{ localize "SFRPGItemSheets.ItemSheet.Details.Tab.Properties" }}</a>
                <a class="item" data-tab="usage">{{ localize "SFRPGItemSheets.ItemSheet.Details.Tab.UsageAction" }}</a>
            </nav>

            {{!-- Details Section --}}
            <section class="sheet-details">

                {{!-- Properties Tab --}}
                <div class="tab properties" data-group="subdetails" data-tab="properties">

                    {{!-- Consumable Details --}}
                    <div class="bubble">
                        <h3 class="bubble-header">{{localize "SFRPGItemSheets.ItemSheet.Details.Section.ConsumableDetails"}}</h3>

                        <div class="bubble-info">

                            {{!-- Consumable Type --}}
                            <div class="form-group">
                                <label>{{ localize "SFRPG.Items.Consumable.Type" }}</label>
                                <select name="system.consumableType">
                                    {{#select itemData.consumableType}}
                                    {{#each config.consumableTypes as |name type|}}
                                    <option value="{{type}}">{{name}}</option>
                                    {{/each}}
                                    {{/select}}
                                </select>
                            </div>

                        </div>
                    </div>

                    {{!-- Physical Properties --}}
                    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/physical-item-details.hbs"}}

                </div>

                {{!-- Usage & Action Tab --}}
                <div class="tab usage" data-group="subdetails" data-tab="usage">

                    {{!-- Item Activation Template --}}
                    {{#if itemData.activation.type}}
                        {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-activation.hbs" message="SFRPG.Items.Consumable.Usage" consumable=true}}
                    {{else}}
                        {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-activation.hbs" message="SFRPG.Items.Consumable.Usage" consumable=false}}
                    {{/if}}

                    {{!-- Item Action Template --}}
                    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-action.hbs" message="SFRPG.Items.Consumable.Action"}}

                </div>

            </section>

        </div>

        {{!-- Modifiers Tab --}}
        {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-modifiers.hbs"}}

    </section>
</form>
