<form class="{{cssClass}} flexcol" autocomplete="off">

    {{!-- Item Sheet Header --}}
    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-header.hbs"}}

     {{!-- Item Sheet Navigation --}}
    <nav class="sheet-navigation tabs" data-group="primary">
        <a class="item active" data-tab="description">{{ localize "SFRPG.Description" }}</a>
        <a class="item" data-tab="details">{{ localize "SFRPG.Details" }}</a>
        <a class="item" data-tab="modifiers">{{ localize "SFRPG.Modifiers" }}</a>
    </nav>

    {{!-- Item Sheet Body --}}
    <section class="sheet-body">
        {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-description.hbs"}}

        {{!-- Details Tab --}}
        <div class="tab details" data-tab="details" data-group="primary">

            {{!-- Details Tab Navigation --}}
            <nav class="sheet-subnavigation subtabs" data-group="subdetails">
                <a class="item active" data-tab="properties">{{ localize "SFRPGItemSheets.ItemSheet.Details.Tab.Properties" }}</a>
                <a class="item" data-tab="usage">{{ localize "SFRPGItemSheets.ItemSheet.Details.Tab.UsageAction" }}</a>
                <a class="item" data-tab="container">{{ localize "SFRPGItemSheets.ItemSheet.Details.Tab.AmmunitionContainer" }}</a>
            </nav>

            {{!-- Details Section --}}
            <section class="sheet-details">

                {{!-- Properties Tab --}}
                <div class="tab properties" data-group="subdetails" data-tab="properties">

                    {{!-- Equipment Status --}}
                    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-status.hbs"}}

                    {{!-- Physical Item Details --}}
                    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/physical-item-details.hbs"}}

                </div>

                {{!-- Usage and Action Tab --}}
                <div class="tab usage" data-group="subdetails" data-tab="usage">

                    {{!-- Item Activation Template --}}
                    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-activation.hbs"}}

                    {{!-- Item Action Template --}}
                    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-action.hbs"}}

                </div>

                {{!-- Container Tab --}}
                <div class="tab container" data-group="subdetails" data-tab="container">

                    {{!-- Capacity --}}
                    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-capacity.hbs"}}

                    {{!-- Container Template --}}
                    {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/container-details.hbs" message="SFRPG.Items.Equipment.ContainerTooltip"}}

                </div>

            </section>

        </div>

        {{!-- Modifiers Tab --}}
        {{> "modules/sfrpg-item-sheets/dist/templates/items/parts/item-modifiers.hbs"}}

    </section>
</form>
